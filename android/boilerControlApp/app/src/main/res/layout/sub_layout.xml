<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/layout_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_side"
        android:descendantFocusability="blocksDescendants"
        >

        <TextView
            android:id="@+id/tv_HeatingPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POW"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="#B06457"/>

        <Switch
            android:id="@+id/sw_HeatingPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_HeatingPower"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:track="@drawable/switch_track_selector"
            android:thumb="@drawable/switch_thumb_selector"
            android:switchMinWidth="50dp"/>


        <TextView
            android:id="@+id/tv_OutgoingMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_HeatingPower"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textColor="#B06457"/>

        <Button
            android:id="@+id/btn_Mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_OutgoingMode"
            android:layout_below="@+id/sw_HeatingPower"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="15dp"
            android:text="indoor"
            android:textStyle="bold"
            android:textColor="#FFBA46"
            android:textSize="15dp"
            android:visibility="invisible"
            android:background="#FC523D" />

        <TextView
            android:id="@+id/tv_Current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sw_HeatingPower"
            android:layout_marginLeft="30dp"
            android:text="Current"
            android:textColor="#B06457"
            android:textOn=""
            android:textOff=""/>

        <TextView
            android:id="@+id/tv_CurrentTemp"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_below="@+id/desiredTemp"
            android:layout_toRightOf="@+id/btn_Mode"
            android:layout_marginLeft="3dp"
            android:text="0"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="gravity"
            android:textColor="#B06457"/>

        <TextView
            android:id="@+id/tv_CurrentD"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/tv_CurrentTemp"
            android:layout_below="@+id/tv_Current"
            android:text="℃"
            android:textSize="30dp"
            android:textColor="#B06457"/>

        <TextView
            android:id="@+id/desiredTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_CurrentD"
            android:layout_marginLeft="10dp"
            android:text="Setting"
            android:textColor="#B06457"/>

        <TextView
            android:id="@+id/tv_desiredTemp"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_below="@+id/desiredTemp"
            android:layout_toRightOf="@+id/tv_CurrentD"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:textAlignment="gravity"
            android:textSize="30dp"
            android:textColor="#B06457"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_desired"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/tv_desiredTemp"
            android:layout_below="@+id/desiredTemp"
            android:text="℃"
            android:textSize="30dp"
            android:textColor="#B06457"/>
        <ImageView
            android:id="@+id/iv_warm"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_desiredTemp"
            android:layout_toRightOf="@+id/tv_CurrentD"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/btn_up"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/tv_desired"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#B06457"
            android:text="▲"
            android:background="#F9C4A4"
            />

        <Button
            android:id="@+id/btn_down"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/btn_Mode"
            android:layout_toStartOf="@+id/btn_save"
            android:background="#F9C4A4"
            android:text="▼"
            android:textColor="#B06457" />



        <Button
            android:id="@+id/btn_save"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/btn_up"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#B06457"
            android:text="OK"
            android:background="#F9C4A4"/>

        <TextView
            android:id="@+id/tv_roomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_CurrentTemp"
            android:layout_toRightOf="@+id/btn_Mode"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="Room1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FC523D"
            android:maxLength="15"
            android:maxLines="1"/>
    </RelativeLayout>

</RelativeLayout>

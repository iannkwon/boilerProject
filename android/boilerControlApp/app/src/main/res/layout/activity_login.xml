<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="boiler.com.boilercontrolapp.LoginActivity"
    android:orientation="vertical"
    android:background="#FC523D"
    android:id="@+id/layout1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Boiler Control"
            android:textStyle="bold"
            android:textColor="#E5E2DB"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="30sp"/>
        <EditText
            android:id="@+id/et_id"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:hint="ID"
            android:inputType="text"
            android:textSize="15dp"
            android:textAlignment="center"
            android:textColor="#E5E2DB"
            android:textColorHint="#E5E2DB"
            android:maxLines="1"
            android:maxLength="10"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/et_pw"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:hint="PASSWORD"
            android:textColorHint="#E5E2DB"
            android:textColor="#E5E2DB"
            android:textSize="15dp"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:maxLines="1"
            android:maxLength="15"
            android:layout_gravity="center"/>

        <CheckBox
            android:id="@+id/cb_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Save"
            android:textColor="#E5E2DB"
            android:layout_gravity="center"
            android:layout_marginRight="40dp"

            />


        <Button
            android:id="@+id/btn_login"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Login"
            android:textColor="#E5E2DB"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="#A50821"/>

        <TextView
            android:id="@+id/tv_member"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="member Register"
            android:textColor="#E5E2DB"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="10dp"
            />

    </LinearLayout>




</LinearLayout>

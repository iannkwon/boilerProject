<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="boiler.com.boilercontrolapp.MemberActivity"
    android:orientation="vertical"
    android:background="#FC523D"
    android:id="@+id/layout2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textStyle="bold"
        android:textColor="#E5E2DB"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="40dp"/>
    <EditText
        android:id="@+id/et_id"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="ID"
        android:textColorHint="#E5E2DB"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#E5E2DB"
        android:maxLines="1"
        android:maxLength="10"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>


    <EditText
        android:id="@+id/et_nicName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="Nicname"
        android:textColorHint="#E5E2DB"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#E5E2DB"
        android:maxLines="1"
        android:maxLength="8"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColorHint="#E5E2DB"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#E5E2DB"
        android:maxLines="1"
        android:maxLength="12"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/et_password2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Password OK"
        android:textColorHint="#E5E2DB"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#E5E2DB"
        android:maxLines="1"
        android:maxLength="12"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textColor="#E5E2DB"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#A50821"/>

</LinearLayout>
